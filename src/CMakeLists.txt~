cmake_minimum_required(VERSION 2.6 FATAL_ERROR)
project(shape_recognition_1)
find_package(PCL 1.7 REQUIRED)
include_directories(${PCL_INCLUDE_DIRS} ${OpenCV_INCLUDE_DIRS} include)
find_package(OpenCV)
link_directories(${PCL_LIBRARY_DIRS} ${OpenCV_LIBRARY_DIRS})
add_definitions(${PCL_DEFINITIONS})
add_executable(shape_recognition_1 src/main.cpp src/weingarten_utils_1.cpp)
target_link_libraries(shape_recognition_1 ${PCL_LIBRARIES} ${OpenCV_LIBS})
